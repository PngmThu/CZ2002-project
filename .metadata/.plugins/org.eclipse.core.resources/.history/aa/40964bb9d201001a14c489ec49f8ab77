import java.io.Serializable;
import java.util.*;

public class Cineplex implements Serializable{
	private int id;
	private String location;
	private int numOfCinemas;
	private ArrayList<Integer> cinemaIds;
	
	public Cineplex(int id, String location) {
		this.id = id;
		this.location = location;
		this.numOfCinemas = 0;
		cinemaIds = new ArrayList<>();
	}

	public int getId() {
		return this.id;
	}

	public String getLocation() {
		return this.location;
	}
	
	public ArrayList<Integer> getCinemaIds() {
		return this.cinemaIds;
	}

	public void setLocation(String location) {
		this.location = location;
	}

	public int getCinemaIdAt(int index) {
		return this.cinemaIds.get(index);
	}

	public void addCinema(int id, String cinemaType) {
		Cinema cinema = new Cinema(numOfCinemas, id, cinemaType);
		numOfCinemas++;
		cinemaIds.add(cinema.getId());
	}
	
	public static void initializeData() {
		List list = null;
		int i;		
		Cineplex cineplex;
		List data = new ArrayList<>();
		String filename = ".\\data\\cineplex.dat";
		
		Vendor vendor = Vendor.getVendorData();
		cineplex = vendor.addCineplex("50 Jurong Gateway Road - Level 5, Jem - Singapore 608549");
		data.add(cineplex);
		cineplex = vendor.addCineplex("80 Marine Parade Road - Level 7, Parkway Parade - Singapore 449269");
		data.add(cineplex);
		
		SerializeDB.writeSerializedObject(filename, data);  //Write data
	}

}